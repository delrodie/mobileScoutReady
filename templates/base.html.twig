<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
        <title></title>
{#        <script src="https://cdn.tailwindcss.com"></script>#}
        <link rel="icon" href="{{ absolute_url(asset('img/favico-bw.png')) }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/app.css') }}">
        {% endblock %}
        <style>
            :root{
                --bg-region: rgba(54, 116, 216, 0.7);
                /*--bg-region: rgba(69, 134, 255, 0.5);*/
            }
            .btn-main{
                background: var(--color-blue-main);
                cursor: pointer;
            }
            .btn-main:hover{
                background: var(--color-blue-dark);
            }
            .bottom-menu {
                position: fixed;
                left: 0;
                right: 0;
                bottom: 0; /* toujours coll√© au bas */
                z-index: 1000;
                background-color: white;
                border-top: 1px solid #e5e7eb;
                padding-bottom: max(env(safe-area-inset-bottom, 0px), 12px);
                height: 100px;
            }


            .carousel-item {
                scroll-snap-align: start;
                width: calc(100% - 32px);
                margin-right: 16px;
            }

            .app-bottom-nav {
                box-shadow: 0 -4px 6px -1px rgba(0, 0, 0, 0.05);
            }

            .nav-item {
                @apply flex flex-col items-center justify-center p-2 text-gray-500 transition duration-300;
            }

            .nav-item.active {
                @apply text-blue-600;
            }

            .nav-icon {
                @apply w-6 h-6;
            }

            .nav-label {
                @apply text-xs mt-1 font-semibold;
            }

            .communaute-card {
                @apply flex items-center p-3 border-b border-gray-100 transition duration-150 hover:bg-gray-50;
            }

            .communaute-avatar {
                width: 48px;
                height: 48px;
            }

            .featured-carousel-item {
                scroll-snap-align: start;
                width: 85%;
                /* Plus petit que le carrousel de l'accueil pour en apercevoir un autre */
                height: 180px;
                margin-right: 16px;
                flex-shrink: 0;
                cursor: pointer;
                transition: transform 0.3s ease;
                /* Animation subtile au survol */
            }

            .featured-carousel-item:hover {
                transform: scale(1.02);
            }

            /* Style pour les cartes de la liste verticale */
            .activity-list-item {
                transition: background-color 0.2s ease;
            }

            .activity-list-item:hover {
                background-color: theme('colors.gray.50');
            }

            .card {
                background-color: var(--color-blue-main);
                border-radius: var(--radius-lg);
                padding: --spacing(6);
                box-shadow: var(--shadow-xl);
            }

        </style>

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="bg-white min-h-screen">
        <div id="flash-message" class="mt-4"></div>
        {% block turbo_frame %}
            {% block body %}{% endblock %}
        {% endblock %}
    </body>
</html>
