<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
        <title></title>
        <link rel="icon" href="{{ absolute_url(asset('img/favico-bw.png')) }}">
        {% block stylesheets %}
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
            {% block extra_stylesheets %}{% endblock %}
        {% endblock %}


        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
            <script>
                if ('serviceWorker' in navigator) {
                    window.addEventListener('load', () => {
                        navigator.serviceWorker.register('/service-worker.js')
                            .then(reg => console.log('✅ Service Worker enregistré avec succès', reg))
                            .catch(err => console.warn('❌ Erreur SW', err));
                    });
                }

                // Expose tes chemins d’assets principaux pour ton JS
                window.APP_ASSETS = {
                    css: "{{ asset('app.css') }}",
                    js: "{{ asset('app.js') }}",
                    logo: "{{ asset('img/logo-scoutready.png') }}",
                    avatar_homme: "{{ asset('avatar/avatar_homme.png') }}",
                    avatar_femme: "{{ asset('avatar/avatar_femme.png') }}",
                    avatar_garcon: "{{ asset('avatar/garcon.png') }}",
                    avatar_fille: "{{ asset('avatar/fille.png') }}",
                    champs_technique: "{{ asset('champs/01-technique-scout.png') }}",
                    champs_civisme: "{{ asset('champs/02_civisme.png') }}",
                    champs_sante: "{{ asset('champs/03-sante.png') }}",
                    champs_technologie: "{{ asset('champs/04-technologie.png') }}",
                    champs_environnement: "{{ asset('champs/05-environnement.png') }}",
                    champs_familiale: "{{ asset('champs/06-education-familliale.png') }}",
                    champs_vieetfoi: "{{ asset('champs/07-vieetfoi.png') }}",
                    champs_culture: "{{ asset('champs/08-culture.png') }}",
                    champs_paix: "{{ asset('champs/09-education-paix.png') }}",
                    champs_sexuelle: "{{ asset('champs/10-education-sexuelle.png') }}",
                    champs_agropastorale: "{{ asset('champs/11-agropastoral.png') }}",
                };
            </script>
        {% endblock %}

    </head>
    <body class="vh-100">
        {% block turbo_frame %}
            {% block body %}{% endblock %}
        {% endblock %}

    {% block extra_javascripts %}

    {% endblock %}

    </body>
</html>
