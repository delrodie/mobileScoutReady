{% extends 'base.html.twig' %}
{% block turbo_frame %}
    <turbo-frame id="main-frame">

        {% block body %}
            <header class="max-w-sm mx-auto px-2 py-3 sticky-top">
                <div class="row pt-4">
                    <div class="col-3">

                        <a href="{{ path('app_activite_index') }}"
                           data-turbo-frame="_top"
                           class="retour"
                        >
                            <i class="bi bi-arrow-left fs-5"></i>
                        </a>
                    </div>
                    <div class="col-9">
                        <h5 class="fs-4">Activité</h5>
                    </div>
                </div>
            </header>

            <main class="max-w-sm mx-auto mt-3 mb-5" data-controller="header profil">
                <section class="form mt-1 px-4"
                         data-controller="activite autorisation"
                         data-autorisation-activite-id-value="{{ activite.id }}"
                >
                    <div class="p-0 m-0 rounded-2">
                        <figure class="overflow-hidden position-relative rounded-2">
                            <img src="{{ asset('uploads/activites/affiche/' ~ activite.affiche) }}" alt="{{ activite.titre }}" class="img-fluid rounded-2" style="width: 100%; height: 190px; object-fit: cover">
                            <figcaption class="position-absolute px-3 py-2 d-flex justify-content-between" style="font-size: .85rem;">
                                <span style="font-size: .7rem; font-weight: bold;"><i class="bi bi-people me-1 fs-6"></i> ND</span>
                                <span style="font-size: .7rem; font-weight: bold;"><i class="bi bi-calendar me-1 fs-6"></i> {{ activite.dateDebutAt|date('d/m/Y') }} - {{ activite.dateFinAt|date('d/m/Y') }}</span>
                            </figcaption>
                        </figure>
                    </div>


                    <div class="d-flex flex-column justify-content-center align-content-center align-items-center mt-3"
                         data-controller="scanner-activite"
                         data-scanner-activite-activite-id-value="{{ activite.id }}"
                    >
                        <div data-autorisation-target="scan">
                            <button class="btn btn-light"
                                    data-action="click->scanner-activite#openModal"
                            >
                                <div class="card border-0 shadow-sm">
                                    <div class="card-body d-flex flex-column text-center px-5 py-2">
                                        <i class="bi bi-qr-code-scan text-color-main py-0 my-0" style="font-size: 3.5rem;"></i>
                                        <h6 class="fw-medium py-0 my-0">Scannez</h6>
                                    </div>
                                </div>
                            </button>
                        </div>

                        <!-- Modal pour le scanner -->
                        <div data-scanner-activite-target="modal"
                             class="modal position-fixed top-0 start-0 w-100 h-100 d-none d-flex"
                             style="background-color: rgba(0, 0, 0, 0.8); z-index: 99999;">

                            <div class="modal-dialog modal-dialog-centered" style="max-width: 90%; margin: auto;">
                                <div class="modal-content bg-transparent border-0 shadow-none">

                                    <div class="modal-header border-0 pb-0">
                                        <button type="button"
                                                class="btn-close btn-close-white"
                                                aria-label="Close"
                                                data-action="click->scanner-activite#closeModal"
                                        ></button>
                                    </div>

                                    <div class="modal-body d-flex flex-column justify-content-center align-items-center pt-0">
                                        <!-- Message selon l'environnement -->
                                        <div id="scanner-web-container" class="d-none">
                                            <div id="qr-reader" style="width: 300px; height: 300px;"></div>
                                        </div>

                                        <div id="scanner-native-message" class="text-center text-white d-none">
                                            <div class="mb-3">
                                                <i class="bi bi-camera-video" style="font-size: 4rem;"></i>
                                            </div>
                                            <h5 class="mb-2">Scanner actif</h5>
                                            <p class="text-light mb-3">Pointez la caméra vers le QR Code</p>
                                            <div class="scanner-frame mb-4" style="width: 250px; height: 250px; border: 2px dashed white; position: relative;">
                                                <div class="scanner-line" style="position: absolute; top: 0; left: 0; right: 0; height: 2px; background: #00ff00; animation: scan 2s linear infinite;"></div>
                                            </div>
                                            <p class="text-light small">Le scanner s'ouvre en plein écran</p>
                                        </div>

                                        <div id="scanner-loading" class="text-center text-white">
                                            <div class="mb-3">
                                                <i class="bi bi-qr-code-scan" style="font-size: 4rem;"></i>
                                            </div>
                                            <h5 class="mb-2">Initialisation...</h5>
                                            <p class="text-light mb-3" id="status-message">Chargement du scanner</p>
                                            <div class="spinner-border text-light" role="status">
                                                <span class="visually-hidden">Chargement...</span>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="modal-footer border-0 pt-0">
                                        <button type="button"
                                                class="btn btn-outline-light"
                                                data-action="click->scanner-activite#closeModal">
                                            Annuler le scan
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-around align-content-center mt-5">
                        <div class="d-flex flex-column text-center pe-5 border-end">
                            <h3 class="text-color-main fw-semibold"
                                data-autorisation-target="participantCount"
                            >{{ participants|length }}</h3>
                            <span class="text-muted">Participants</span>
                        </div>
                        <div class="d-flex flex-column text-center ps-1">
                            <h3 class="text-color-main fw-semibold"
                                data-autorisation-target="noteMoyen"
                            >ND</h3>
                            <span class="text-muted">Notes</span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center align-content-center align-items-center my-5"
                         data-autorisation-target="btnAction"
                    >
                        <a href="{{ path('app_reunion_edit', {'id': activite.id}) }}" class="h4 mx-2 text-decoration-none" title="Modifier" data-turbo="false">
                            <div class="card h-100">
                                <div class="card-body text-color-main">
                                    <i class="bi bi-pencil-square"></i>
                                </div>
                            </div>

                        </a>
                        <a href="{{ path('app_autorisation_activite_ajouter',{'id': activite.id}) }}" class="h4 mx-2 text-decoration-none" data-turbo="false">
                            <div class="card h-100">
                                <div class="card-body text-color-dark">
                                    <i class="bi bi-person-plus"></i>
                                </div>
                            </div>

                        </a>
                    </div>

                    <div class="mt-5">
                        <h6 class="text-muted">Details</h6>
                        <div class="row row-cols-1 g-2">
                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Titre: </small>
                                <div class="fsize-15 text-end">{{ activite.titre }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Thème: </small>
                                <div class="fsize-15 text-end">{{ activite.theme }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Description: </small>
                                <div class="fsize-15 text-end">{{ activite.description }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">lieu: </small>
                                <div class="fsize-15 text-end">{{ activite.lieu }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Période: </small>
                                <div class="fsize-15 text-end">{{ activite.dateDebutAt|date('d/m/Y') }} - {{ activite.dateFinAt|date('d/m/Y') }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Heures: </small>
                                <div class="fsize-15 text-end">{{ activite.heureDebut|date('H:i') }} - {{ activite.heureFin|date('H:i') }}</div>
                            </div>

                            <div class="col d-flex justify-content-between border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Cibles: </small>
                                <div class="fsize-15 text-end">{% for cible in activite.cible %}
                                        {{ cible }} -
                                    {% endfor %}</div>
                            </div>

                        </div>
                    </div>

                    {% if pointeurs %}
                        <div class="mt-5">
                            <h6 class="text-muted">Personnes autorisées</h6>
                            <div class="row row-cols-1">
                                {% for pointeur in pointeurs %}
                                    <div class="col d-flex justify-content-start align-content-start shadow-sm py-2">
                                        <a href="{{ path('app_communaute_membre', {'slug': pointeur.scout.slug}) }}" class="text-decoration-none text-secondary url-membre">
                                            <div class="row g-2 d-flex align-items-center">
                                                <div class="col-3">
                                                    <div
                                                        data-controller="image-loader"
                                                        data-image-loader-src-value="{{ pointeur.scout.slug|avatar }}"
                                                        data-image-loader-native-src-value="asset://{{ asset('img/avatar/avatar_femme.png') }}"
                                                        data-image-loader-preload-value="true"
                                                        data-communaute-target="avatarLoader"
                                                    >
                                                        <img alt="" class="img-fluid">
                                                    </div>

                                                </div>
                                                <div class="col-9">
                                                    <h5 class="fsize-13 text-body mb-0 pb-0">{{ pointeur.scout.nom }} {{ pointeur.scout.prenom }}</h5>
                                                    <div class="fsize-12 text-color-main mb-0 pb-0 js-fonction">{{ pointeur.scout.id|fonction_scoute|raw }}</div>
                                                    <div class="text-muted fsize-12 fst-italic mt-0 pt-0 js-instance">{{ pointeur.scout.id|instance_scoute|raw }}</div>
                                                    <span class="badge bg-danger"style="font-size: .55rem;">{{ pointeur.role }}</span>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                {% endfor %}

                            </div>
                        </div>
                    {% endif %}

                </section>

            </main>
            <div class="" style="margin-top: 50px;">.</div>

        {% endblock %}

    </turbo-frame>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Animation pour la ligne de scan */
        @keyframes scan {
            0% { top: 0; }
            50% { top: calc(100% - 2px); }
            100% { top: 0; }
        }

        /* Style pour le cadre du scanner */
        .scanner-frame {
            border-radius: 10px;
            overflow: hidden;
        }

        .scanner-line {
            box-shadow: 0 0 10px #00ff00;
        }
        /* Style pour quand le scanner est actif */
        .scanner-active {
            background: transparent !important;
        }

        .scanner-active ion-content {
            background: transparent !important;
        }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <!-- Dans votre base.html.twig ou à la fin de show.html.twig -->
    <script>
        // Ajoutez cette logique pour mieux gérer l'affichage
        document.addEventListener('scanner:environment-detected', (event) => {
            const isNative = event.detail.isNative;

            // Masquer le loader
            document.getElementById('scanner-loading').classList.add('d-none');

            if (isNative) {
                // Afficher le message pour le scanner natif
                document.getElementById('scanner-native-message').classList.remove('d-none');
            } else {
                // Afficher le container pour le scanner web
                document.getElementById('scanner-web-container').classList.remove('d-none');
            }
        });
    </script>
{% endblock %}
