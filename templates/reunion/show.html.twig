{% extends 'base.html.twig' %}
{% block turbo_frame %}
    <turbo-frame id="main-frame">

        {% block body %}
            <header class="max-w-sm mx-auto px-2 py-3 sticky-top">
                <div class="row pt-4">
                    <div class="col-3">

                        <a href="{{ path('app_activite_index') }}"
                           data-turbo-frame="_top"
                           class="retour"
                        >
                            <i class="bi bi-arrow-left fs-5"></i>
                        </a>
                    </div>
                    <div class="col-9">
                        <h5 class="fs-4">Réunion</h5>
                    </div>
                </div>
            </header>

            <main class="max-w-sm mx-auto mt-3 mb-5" data-controller="header profil">
                <section class="form mt-1 px-4"
                         data-controller="reunion autorisation-reunion"
                         data-autorisation-reunion-reunion-id-value="{{ reunion.id }}"
                >
                    <div class="p-0 m-0 rounded-2">
                        <figure class="overflow-hidden position-relative rounded-2">
                            <h1 class="text-center text-color-main">{{ reunion.code ?? null }}</h1>

                        </figure>
                    </div>

                        <div class="d-flex flex-column justify-content-center align-content-center align-items-center mt-3"
                             data-controller="scanner-reunion"
                             data-scanner-reunion-reunion-id-value="{{ reunion.id }}"
                        >
                            <div data-autorisation-reunion-target="scan">
                                <button  class="btn btn-light"
                                         data-action="click->scanner-reunion#openModal"
                                >
                                    <div class="card border-0 shadow-sm">
                                        <div class="card-body d-flex flex-column text-center px-5 py-2">
                                            <i class="bi bi-qr-code-scan text-color-main py-0 my-0" style="font-size: 3.5rem;"></i>
                                            <h6 class="fw-medium py-0 my-0">Scannez</h6>
                                        </div>
                                    </div>
                                </button>
                            </div>

                            <!-- Modal pour le scanner -->
                            <div data-scanner-reunion-target="modal"
                                 class="modal position-fixed top-0 start-0 w-100 h-100 d-none d-flex"
                                 style="background-color: rgba(0, 0, 0, 0.8); z-index: 99999;">

                                <div class="modal-dialog modal-dialog-centered" style="max-width: 90%; margin: auto;">
                                    <div class="modal-content bg-transparent border-0 shadow-none">

                                        <div class="modal-header border-0 pb-0">
                                            <button type="button"
                                                    class="btn-close btn-close-white"
                                                    aria-label="Close"
                                                    data-action="click->scanner-reunion#closeModal"
                                            ></button>
                                        </div>

                                        <div class="modal-body d-flex flex-column justify-content-center align-items-center pt-0">
                                            <!-- État de chargement -->
                                            <div data-scanner-reunion-target="loading" class="text-center text-white">
                                                <div class="mb-3">
                                                    <i class="bi bi-qr-code-scan" style="font-size: 4rem;"></i>
                                                </div>
                                                <h5 class="mb-2">Initialisation du scanner...</h5>
                                                <p class="text-light mb-3">Veuillez patienter</p>
                                                <div class="spinner-border text-light" role="status">
                                                    <span class="visually-hidden">Chargement...</span>
                                                </div>
                                            </div>

                                            <!-- Message pour le scanner natif -->
                                            <div data-scanner-reunion-target="nativeMessage"
                                                 class="text-center text-white d-none">
                                                <div class="mb-3">
                                                    <i class="bi bi-camera-video" style="font-size: 4rem;"></i>
                                                </div>
                                                <h5 class="mb-2">Scanner prêt</h5>
                                                <p class="text-light mb-3">Le scanner s'ouvrira en plein écran</p>
                                                <div class="scanner-frame mb-4"
                                                     style="width: 250px; height: 250px; border: 2px dashed white; position: relative;">
                                                    <div class="scanner-line"
                                                         style="position: absolute; top: 0; left: 0; right: 0; height: 2px; background: #00ff00; animation: scan 2s linear infinite;"></div>
                                                </div>
                                                <p class="text-light small">Pointez vers le QR Code</p>
                                            </div>

                                            <!-- Container pour le scanner web -->
                                            <div data-scanner-reunion-target="webContainer"
                                                 class="d-none w-100 d-flex justify-content-center">
                                                <div id="qr-reader" style="width: 100%; max-width: 500px;"></div>
                                            </div>
                                        </div>

                                        <div class="modal-footer border-0 pt-0">
                                            <button type="button"
                                                    class="btn btn-outline-light"
                                                    data-action="click->scanner-reunion#closeModal">
                                                Annuler le scan
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    <div class="d-flex justify-content-around align-content-center mt-5">
                        <div class="d-flex flex-column text-center pe-5 border-end">
                            <a href="{{ path('app_reunion_participants', {'id': reunion.id}) }}" class="text-decoration-none">
                                <h3 class="text-color-main fw-semibold"
                                    data-autorisation-reunion-target="participantCount"
                                >ND</h3>
                                <span class="text-muted">Participants</span>
                            </a>
                        </div>
                        <div class="d-flex flex-column text-center ps-1">
                            <h3 class="text-color-main fw-semibold"
                                data-autorisation-reunion-target="noteMoyen"
                            >ND</h3>
                            <span class="text-muted">Notes</span>
                        </div>
                    </div>

                    <div class="d-flex justify-content-center align-content-center align-items-center my-5"
                         data-autorisation-reunion-target="btnAction"
                    >
                        <a href="{{ path('app_reunion_edit', {'id': reunion.id}) }}" class="h4 mx-2 text-decoration-none" title="Modifier" data-turbo="false">
                            <div class="card h-100">
                                <div class="card-body text-color-main">
                                    <i class="bi bi-pencil-square"></i>
                                </div>
                            </div>

                        </a>
                        <a href="{{ path('app_autorisation_reunion_ajouter',{'id': reunion.id}) }}" class="h4 mx-2 text-decoration-none" data-turbo="false">
                            <div class="card h-100">
                                <div class="card-body text-color-dark">
                                    <i class="bi bi-person-plus"></i>
                                </div>
                            </div>

                        </a>
                    </div>

                    <div class="mt-5">
                        <h6 class="text-muted">Details</h6>
                        <div class="row row-cols-1 g-2">
                            {% if reunion.champs %}
                                <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                    <small class="text-muted fsize-13 me-1">Champs d'activité: </small>
                                    <div class="fsize-15 text-end">{{ reunion.champs }}</div>
                                </div>
                            {% endif %}

                            {% if reunion.branche %}
                                <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                    <small class="text-muted fsize-13 me-1">Branche concernée: </small>
                                    <div class="fsize-15 text-end">{{ reunion.branche }}</div>
                                </div>
                            {% endif %}
                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Titre: </small>
                                <div class="fsize-15 text-end">{{ reunion.titre }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Objectif: </small>
                                <div class="fsize-15 text-end">{{ reunion.objectif }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Description: </small>
                                <div class="fsize-15 text-end">{{ reunion.description }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Résultats attendus: </small>
                                <div class="fsize-15 text-end">{{ reunion.attente }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">lieu: </small>
                                <div class="fsize-15 text-end">{{ reunion.lieu }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Date: </small>
                                <div class="fsize-15 text-end">{{ reunion.dateAt|date('d/m/Y') }}</div>
                            </div>

                            <div class="col d-flex justify-content-between  border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Heures: </small>
                                <div class="fsize-15 text-end">{{ reunion.heureDebut|date('H:i') }} - {{ reunion.heureFin|date('H:i') }}</div>
                            </div>

                            <div class="col d-flex justify-content-between border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Cibles: </small>
                                <div class="fsize-15 text-end">{% for cible in reunion.cible %}
                                        {{ cible }} -
                                    {% endfor %}</div>
                            </div>

                            <div class="col d-flex justify-content-between border-bottom mt-3 pb-1">
                                <small class="text-muted fsize-13 me-1">Auteur: </small>
                                <div class="fsize-15 text-end d-flex flex-column">
                                    <span class="fsize-12">{{ auteur_nom|raw }}</span>
                                    <span class="text-color-main fst-italic fsize-12">{{ auteur_poste|raw }}</span>
                                </div>
                            </div>

                        </div>

                    </div>

                    <div class="mt-5">
                        <h6 class="text-muted">Personnes autorisées</h6>
                        <div class="row row-cols-1">
                            {% for pointeur in pointeurs %}
                                <div class="col d-flex justify-content-start align-content-start shadow-sm py-2">
{#                                    {% for scout in autorisation.scout %}#}
                                        <a href="{{ path('app_communaute_membre', {'slug': pointeur.scout.slug}) }}" class="text-decoration-none text-secondary url-membre">
                                            <div class="row g-2 d-flex align-items-center">
                                                <div class="col-3">
                                                    <div
                                                        data-controller="image-loader"
                                                        data-image-loader-src-value="{{ pointeur.scout.slug|avatar }}"
                                                        {#                                                        data-image-loader-src-value="{{ scout.sexe == 'HOMME' ? asset('img/avatar/avatar_homme.png') : asset('img/avatar/avatar_femme.png') }}"#}
                                                        {#                                        data-image-loader-native-src-value="asset://{{ asset('img/avatar/avatar_femme.png') }}"#}
                                                        data-image-loader-preload-value="true"
                                                        data-communaute-target="avatarLoader"
                                                    >
                                                        <img alt="" class="img-fluid">
                                                    </div>

                                                </div>
                                                <div class="col-9">
                                                    <h5 class="fsize-13 text-body mb-0 pb-0">  {{ pointeur.scout.nom }} {{ pointeur.scout.prenom }}</h5>
                                                    <div class="fsize-12 text-color-main mb-0 pb-0 js-fonction">  {{ pointeur.scout.id|fonction_scoute|raw }}</div>
                                                    <div class="text-muted fsize-12 fst-italic mt-0 pt-0 js-instance">  {{ pointeur.scout.id|instance_scoute|raw }}</div>
                                                    <span class="badge bg-danger"style="font-size: .55rem;"> {{ pointeur.role }} </span>
                                                </div>
                                            </div>
                                        </a>
{# {% endfor %} #}
                                </div>
                           {% endfor %}

                        </div>
                    </div>
                </section>

            </main>
            <div class="" style="margin-top: 50px;">.</div>

        {% endblock %}

    </turbo-frame>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Animation pour la ligne de scan */
        @keyframes scan {
            0% { top: 0; opacity: 1; }
            50% { top: calc(100% - 2px); opacity: 0.8; }
            100% { top: 0; opacity: 1; }
        }

        .scanner-frame {
            border-radius: 10px;
            overflow: hidden;
            background: rgba(0, 0, 0, 0.3);
        }

        .scanner-line {
            box-shadow: 0 0 10px #00ff00, 0 0 20px #00ff00;
        }

        /* Styles spécifiques pour le scanner web */
        #qr-reader {
            border: 2px solid #fff;
            border-radius: 10px;
            overflow: hidden;
        }

        #qr-reader video {
            border-radius: 8px;
        }

        /* Assurez-vous que le modal est au-dessus de tout */
        .modal {
            z-index: 99999 !important;
        }

        #qr-reader {
            width: 100%;
            max-width: 500px;
        }

        #qr-reader video {
            border-radius: 10px;
            width: 100%;
            height: auto;
        }

        /* Pour cacher les boutons inutiles si vous voulez un look plus épuré */
        #qr-reader__dashboard_section {
            display: none; /* Cache le dashboard avec les boutons de sélection de caméra, etc. */
        }

        /* Personnalisation du viseur de scan */
        #qr-reader__scan_region {
            position: relative;
        }

        #qr-reader__scan_region video {
            border: 2px solid #00ff00;
            border-radius: 15px;
        }

        /* Ajouter un cadre visuel */
        #qr-reader__scan_region::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 250px;
            height: 250px;
            border: 2px dashed #00ff00;
            border-radius: 10px;
            pointer-events: none;
            z-index: 10;
        }

        /* Animation du viseur */
        @keyframes scanning {
            0% { opacity: 0.3; }
            50% { opacity: 1; }
            100% { opacity: 0.3; }
        }

        #qr-reader__scan_region::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 250px;
            height: 4px;
            background: linear-gradient(90deg, transparent, #00ff00, transparent);
            animation: scanning 2s ease-in-out infinite;
            border-radius: 2px;
            z-index: 11;
        }

        /* Styles pour les notifications personnalisées */
        .notification {
            margin-bottom: 10px;
            animation: slideInRight 0.3s ease-out;
        }

        @keyframes slideInRight {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }

        /* S'assurer que les alertes Bootstrap sont au-dessus du modal */
        .alert {
            z-index: 999999 !important;
            position: relative;
        }

        /* Si vous utilisez flasher, assurez-vous qu'il est visible */
        .flasher-container {
            z-index: 999999 !important;
            position: fixed !important;
            top: 20px !important;
            right: 20px !important;
        }
    </style>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    <script>
        // Script de debug
        document.addEventListener('DOMContentLoaded', function() {
            console.log('=== DEBUG SCANNER ===');

            // Vérifier Capacitor
            if (typeof Capacitor === 'undefined') {
                console.log('Capacitor: NON DISPONIBLE (mode web)');
            } else {
                console.log('Capacitor:', Capacitor);
                console.log('isNative:', Capacitor.isNative);
                console.log('Plugins:', Capacitor.Plugins ? Object.keys(Capacitor.Plugins) : 'none');
            }

            // Vérifier les APIs caméra
            navigator.mediaDevices.enumerateDevices()
                .then(devices => {
                    const cameras = devices.filter(d => d.kind === 'videoinput');
                    console.log('Caméras disponibles:', cameras.length);
                    cameras.forEach(cam => console.log(' -', cam.label || 'Caméra sans nom'));
                })
                .catch(err => console.log('Erreur détection caméras:', err));
        });

        // Loguer les changements de visibilité
        document.addEventListener('visibilitychange', function() {
            console.log('Visibilité page:', document.visibilityState);
        });

    </script>
{% endblock %}
